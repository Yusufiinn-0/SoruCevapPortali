@model Cevap
@{
    ViewData["Title"] = "Cevap Detayı";
}

<div class="page-header">
    <h2 class="page-title">Cevap Detayı</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="data-card">
            <div class="data-card-header">
                <h5 class="data-card-title">Cevap #@Model.CevapId</h5>
                <div>
                    @if (Model.DogruCevapMi)
                    {
                        <span class="badge bg-success me-2">Doğru Cevap</span>
                    }
                    @if (Model.OnayliMi)
                    {
                        <span class="badge-status badge-active">Onaylı</span>
                    }
                    else
                    {
                        <span class="badge-status badge-pending">Onay Bekliyor</span>
                    }
                </div>
            </div>
            <div class="data-card-body">
                <div class="mb-4" style="white-space: pre-wrap;">@Model.Icerik</div>
                <hr />
                <div class="d-flex justify-content-between text-muted small">
                    <span><i class="fas fa-user me-1"></i>@Model.Kullanici?.Ad @Model.Kullanici?.Soyad</span>
                    <span><i class="fas fa-calendar me-1"></i>@Model.OlusturmaTarihi.ToString("dd MMMM yyyy HH:mm")</span>
                    <span><i class="fas fa-heart me-1"></i>@Model.BegeniSayisi beğeni</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="data-card mb-4">
            <div class="data-card-header">
                <h5 class="data-card-title">İlgili Soru</h5>
            </div>
            <div class="data-card-body">
                <a href="@Url.Action("Details", "Soru", new { area = "Admin", id = Model.SoruId })" 
                   class="text-primary text-decoration-none">
                    <i class="fas fa-question-circle me-2"></i>@Model.Soru?.Baslik
                </a>
            </div>
        </div>
        
        <div class="d-grid gap-2">
            <a href="@Url.Action("Edit", new { id = Model.CevapId })" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Düzenle
            </a>
            <form asp-action="Delete" method="post" 
                  onsubmit="return confirm('Bu cevabı silmek istediğinize emin misiniz?');">
                <input type="hidden" name="id" value="@Model.CevapId" />
                <button type="submit" class="btn btn-outline-danger w-100">
                    <i class="fas fa-trash me-2"></i>Sil
                </button>
            </form>
        </div>
    </div>
</div>


