@model CevapViewModel
@{
    ViewData["Title"] = "Cevap Düzenle";
}

<div class="page-header">
    <h2 class="page-title">Cevap Düzenle</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Geri Dön
    </a>
</div>

<div class="data-card">
    <div class="data-card-body">
        <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            <strong>İlgili Soru:</strong> @Model.SoruBaslik
        </div>
        
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CevapId" />
            <input type="hidden" asp-for="SoruId" />
            
            <div class="mb-3">
                <label asp-for="Icerik" class="form-label"></label>
                <textarea asp-for="Icerik" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Icerik" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="form-check form-switch mb-3">
                        <input asp-for="AktifMi" class="form-check-input" type="checkbox" />
                        <label asp-for="AktifMi" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check form-switch mb-3">
                        <input asp-for="OnayliMi" class="form-check-input" type="checkbox" />
                        <label asp-for="OnayliMi" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check form-switch mb-3">
                        <input asp-for="DogruCevapMi" class="form-check-input" type="checkbox" />
                        <label asp-for="DogruCevapMi" class="form-check-label"></label>
                    </div>
                </div>
            </div>
            
            <hr class="my-4" />
            
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Güncelle
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>


