@model List<QuestionViewModel>
@{
    ViewData["Title"] = "Sorular";
}

<div class="page-header">
    <h2 class="page-title">Sorular</h2>
</div>

<div class="data-card">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Kullanıcı</th>
                    <th>Görüntülenme</th>
                    <th>Cevap</th>
                    <th>Onay</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var question in Model)
                    {
                        <tr>
                            <td>#@question.QuestionId</td>
                            <td>
                                <div style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    <strong>@question.Title</strong>
                                </div>
                                <small class="text-muted">@question.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                            </td>
                            <td><span class="badge bg-info">@question.CategoryName</span></td>
                            <td>@question.UserName</td>
                            <td><i class="fas fa-eye me-1"></i>@question.ViewCount</td>
                            <td><span class="badge bg-secondary">@question.AnswerCount</span></td>
                            <td>
                                @if (question.IsApproved)
                                {
                                    <span class="badge-status badge-active" id="approve-@question.QuestionId">
                                        <i class="fas fa-check me-1"></i>Onaylı
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-status badge-pending" id="approve-@question.QuestionId">
                                        <i class="fas fa-clock me-1"></i>Bekliyor
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="badge-status @(question.IsActive ? "badge-active" : "badge-inactive")" 
                                      id="status-@question.QuestionId">
                                    @(question.IsActive ? "Aktif" : "Pasif")
                                </span>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Details", new { id = question.QuestionId })" 
                                       class="btn-action view" title="Detay">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = question.QuestionId })" 
                                       class="btn-action edit" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (!question.IsApproved)
                                    {
                                        <button type="button" class="btn-action view" title="Onayla"
                                                onclick="approve(@question.QuestionId)">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    }
                                    <form asp-action="Delete" method="post" style="display:inline;" 
                                          onsubmit="return confirm('Bu soruyu silmek istediğinize emin misiniz? İlgili tüm cevaplar da silinecektir.');">
                                        <input type="hidden" name="id" value="@question.QuestionId" />
                                        <button type="submit" class="btn-action delete" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-5">
                            <i class="fas fa-question-circle fa-3x mb-3 d-block"></i>
                            Henüz soru eklenmemiş.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
<script>
function approve(id) {
    $.post('@Url.Action("Approve")', { id: id }, function(response) {
        if (response.success) {
            var approveBadge = $('#approve-' + id);
            approveBadge.removeClass('badge-pending').addClass('badge-active')
                     .html('<i class="fas fa-check me-1"></i>Onaylı');
            alert(response.message);
        } else {
            alert(response.message);
        }
    });
}

function toggleStatus(id) {
    $.post('@Url.Action("ToggleStatus")', { id: id }, function(response) {
        if (response.success) {
            var statusBadge = $('#status-' + id);
            if (response.isActive) {
                statusBadge.removeClass('badge-inactive').addClass('badge-active').text('Aktif');
            } else {
                statusBadge.removeClass('badge-active').addClass('badge-inactive').text('Pasif');
            }
            alert(response.message);
        } else {
            alert(response.message);
        }
    });
}
</script>
}


