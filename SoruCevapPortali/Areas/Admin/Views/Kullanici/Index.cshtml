@model List<KullaniciViewModel>
@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="page-header">
    <h2 class="page-title">Kullanıcılar</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Yeni Kullanıcı
    </a>
</div>

<div class="data-card">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad Soyad</th>
                    <th>E-posta</th>
                    <th>Kayıt Tarihi</th>
                    <th>Soru</th>
                    <th>Cevap</th>
                    <th>Yetki</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var kullanici in Model)
                    {
                        <tr>
                            <td>#@kullanici.KullaniciId</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="topbar-avatar me-2" style="width: 35px; height: 35px; font-size: 14px;">
                                        @kullanici.Ad.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <strong>@kullanici.Ad @kullanici.Soyad</strong>
                                    </div>
                                </div>
                            </td>
                            <td>@kullanici.Email</td>
                            <td>@kullanici.KayitTarihi?.ToString("dd.MM.yyyy")</td>
                            <td><span class="badge bg-primary">@kullanici.SoruSayisi</span></td>
                            <td><span class="badge bg-success">@kullanici.CevapSayisi</span></td>
                            <td>
                                @if (kullanici.AdminMi)
                                {
                                    <span class="badge bg-danger" id="admin-@kullanici.KullaniciId">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary" id="admin-@kullanici.KullaniciId">Üye</span>
                                }
                            </td>
                            <td>
                                <span class="badge-status @(kullanici.AktifMi ? "badge-active" : "badge-inactive")" 
                                      id="status-@kullanici.KullaniciId">
                                    @(kullanici.AktifMi ? "Aktif" : "Pasif")
                                </span>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Edit", new { id = kullanici.KullaniciId })" 
                                       class="btn-action edit" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (kullanici.KullaniciId != 1)
                                    {
                                        <button type="button" class="btn-action view" title="Durum Değiştir"
                                                onclick="toggleStatus(@kullanici.KullaniciId)">
                                            <i class="fas fa-power-off"></i>
                                        </button>
                                        <button type="button" class="btn-action @(kullanici.AdminMi ? "delete" : "")" 
                                                title="Admin Yetkisi" onclick="toggleAdmin(@kullanici.KullaniciId)"
                                                style="@(kullanici.AdminMi ? "" : "background: rgba(108, 117, 125, 0.1); color: #6c757d;")">
                                            <i class="fas fa-user-shield"></i>
                                        </button>
                                        <form asp-action="Delete" method="post" style="display:inline;" 
                                              onsubmit="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                                            <input type="hidden" name="id" value="@kullanici.KullaniciId" />
                                            <button type="submit" class="btn-action delete" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-5">
                            <i class="fas fa-users fa-3x mb-3 d-block"></i>
                            Henüz kullanıcı bulunmuyor.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
<script>
function toggleStatus(id) {
    $.post('@Url.Action("ToggleStatus")', { id: id }, function(response) {
        if (response.success) {
            var statusBadge = $('#status-' + id);
            if (response.aktifMi) {
                statusBadge.removeClass('badge-inactive').addClass('badge-active').text('Aktif');
            } else {
                statusBadge.removeClass('badge-active').addClass('badge-inactive').text('Pasif');
            }
            alert(response.message);
        } else {
            alert(response.message);
        }
    });
}

function toggleAdmin(id) {
    $.post('@Url.Action("ToggleAdmin")', { id: id }, function(response) {
        if (response.success) {
            var adminBadge = $('#admin-' + id);
            if (response.adminMi) {
                adminBadge.removeClass('bg-secondary').addClass('bg-danger').text('Admin');
            } else {
                adminBadge.removeClass('bg-danger').addClass('bg-secondary').text('Üye');
            }
            alert(response.message);
        } else {
            alert(response.message);
        }
    });
}
</script>
}


