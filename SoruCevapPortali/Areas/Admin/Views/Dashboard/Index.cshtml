@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Stat Cards -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon primary">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-card-value">@Model.TotalUser</div>
            <div class="stat-card-label">Toplam Kullanıcı</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon success">
                <i class="fas fa-question-circle"></i>
            </div>
            <div class="stat-card-value">@Model.TotalQuestion</div>
            <div class="stat-card-label">Toplam Soru</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon warning">
                <i class="fas fa-comments"></i>
            </div>
            <div class="stat-card-value">@Model.TotalAnswer</div>
            <div class="stat-card-label">Toplam Cevap</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card">
            <div class="stat-card-icon info">
                <i class="fas fa-folder"></i>
            </div>
            <div class="stat-card-value">@Model.TotalCategory</div>
            <div class="stat-card-label">Toplam Kategori</div>
        </div>
    </div>
</div>

<!-- Soru Durumları ve Bugünkü İstatistikler -->
<div class="row g-4 mb-4">
    <!-- Soru Durumları -->
    <div class="col-md-6">
        <div class="data-card">
            <div class="data-card-header">
                <h5 class="data-card-title">Soru Durumları</h5>
            </div>
            <div class="data-card-body">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="stat-card" style="border-left: 4px solid #10b981; background: rgba(16, 185, 129, 0.05);">
                            <div class="text-center">
                                <div class="stat-card-value" style="font-size: 32px; color: #10b981;">@(Model.TotalQuestion - Model.PendingQuestions)</div>
                                <div class="stat-card-label" style="color: #10b981; font-weight: 600;">Çözülmüş</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-card" style="border-left: 4px solid #f59e0b; background: rgba(245, 158, 11, 0.05);">
                            <div class="text-center">
                                <div class="stat-card-value" style="font-size: 32px; color: #f59e0b;">@Model.PendingQuestions</div>
                                <div class="stat-card-label" style="color: #f59e0b; font-weight: 600;">Bekleyen</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bugünkü İstatistikler -->
    <div class="col-md-6">
        <div class="data-card">
            <div class="data-card-header">
                <h5 class="data-card-title">Bugünkü İstatistikler</h5>
            </div>
            <div class="data-card-body">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="stat-card" style="border-left: 4px solid #3b82f6; background: rgba(59, 130, 246, 0.05);">
                            <div class="text-center">
                                <div class="stat-card-value" style="font-size: 32px; color: #3b82f6;">0</div>
                                <div class="stat-card-label" style="color: #3b82f6; font-weight: 600;">Yeni Soru</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-card" style="border-left: 4px solid #06b6d4; background: rgba(6, 182, 212, 0.05);">
                            <div class="text-center">
                                <div class="stat-card-value" style="font-size: 32px; color: #06b6d4;">0</div>
                                <div class="stat-card-label" style="color: #06b6d4; font-weight: 600;">Yeni Cevap</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hızlı Erişim -->
<div class="row g-4 mb-4">
    <div class="col-12">
        <div class="data-card">
            <div class="data-card-header">
                <h5 class="data-card-title">Hızlı Erişim</h5>
            </div>
            <div class="data-card-body">
                <div class="row g-3">
                    <div class="col-md-3 col-6">
                        <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="btn btn-outline-primary w-100 p-3" style="border-width: 2px; font-weight: 600;">
                            <i class="fas fa-users fa-2x d-block mb-2"></i>
                            Kullanıcıları Yönet
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="btn btn-outline-success w-100 p-3" style="border-width: 2px; font-weight: 600;">
                            <i class="fas fa-folder fa-2x d-block mb-2"></i>
                            Kategorileri Yönet
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a href="@Url.Action("Index", "Question", new { area = "Admin" })" class="btn btn-outline-warning w-100 p-3" style="border-width: 2px; font-weight: 600;">
                            <i class="fas fa-question fa-2x d-block mb-2"></i>
                            Soruları Yönet
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a href="@Url.Action("Index", "Answer", new { area = "Admin" })" class="btn btn-outline-info w-100 p-3" style="border-width: 2px; font-weight: 600;">
                            <i class="fas fa-comments fa-2x d-block mb-2"></i>
                            Cevapları Yönet
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Data -->
<div class="row g-4">
    <!-- Son Sorular -->
    <div class="col-lg-6">
        <div class="data-card">
            <div class="data-card-header">
                <h5 class="data-card-title">
                    <i class="fas fa-question-circle me-2 text-primary"></i>Son Sorular
                </h5>
                <a href="@Url.Action("Index", "Question", new { area = "Admin" })" class="btn btn-sm btn-outline-primary">
                    Tümünü Gör
                </a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentQuestions.Any())
                        {
                            @foreach (var question in Model.RecentQuestions)
                            {
                                <tr>
                                    <td>
                                        <div style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                            @question.Title
                                        </div>
                                        <small class="text-muted">@question.UserName</small>
                                    </td>
                                    <td>@question.CategoryName</td>
                                    <td>
                                        @if (question.IsApproved)
                                        {
                                            <span class="badge-status badge-active">Onaylı</span>
                                        }
                                        else
                                        {
                                            <span class="badge-status badge-pending">Bekliyor</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    Henüz soru bulunmuyor
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Son Cevaplar -->
    <div class="col-lg-6">
        <div class="data-card">
            <div class="data-card-header">
                <h5 class="data-card-title">
                    <i class="fas fa-comments me-2 text-success"></i>Son Cevaplar
                </h5>
                <a href="@Url.Action("Index", "Answer", new { area = "Admin" })" class="btn btn-sm btn-outline-success">
                    Tümünü Gör
                </a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Cevap</th>
                            <th>Kullanıcı</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentAnswers.Any())
                        {
                            @foreach (var answer in Model.RecentAnswers)
                            {
                                <tr>
                                    <td>
                                        <div style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                            @answer.Content
                                        </div>
                                    </td>
                                    <td>@answer.UserName</td>
                                    <td>
                                        @if (answer.IsApproved)
                                        {
                                            <span class="badge-status badge-active">Onaylı</span>
                                        }
                                        else
                                        {
                                            <span class="badge-status badge-pending">Bekliyor</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    Henüz cevap bulunmuyor
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
