@model CategoryViewModel
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="page-header">
    <h2 class="page-title">Kategori Düzenle</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Geri Dön
    </a>
</div>

<div class="data-card">
    <div class="data-card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CategoryId" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Icon" class="form-label"></label>
                        <input asp-for="Icon" class="form-control" />
                        <small class="text-muted">FontAwesome ikon sınıfı</small>
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="OrderNumber" class="form-label"></label>
                        <input asp-for="OrderNumber" type="number" class="form-control" />
                        <span asp-validation-for="OrderNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3 pt-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
            </div>
            
            <hr class="my-4" />
            
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Güncelle
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>


