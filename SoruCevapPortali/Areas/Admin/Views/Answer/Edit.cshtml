@model AnswerViewModel
@{
    ViewData["Title"] = "Edit Answer";
}

<div class="page-header">
    <h2 class="page-title">Edit Answer</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back
    </a>
</div>

<div class="data-card">
    <div class="data-card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="AnswerId" />
            <input type="hidden" asp-for="QuestionId" />
            
            <div class="mb-3">
                <label class="form-label">Question</label>
                <input type="text" class="form-control" value="@Model.QuestionTitle" readonly />
            </div>
            
            <div class="mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3 pt-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3 pt-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsApproved" class="form-check-input" type="checkbox" />
                            <label asp-for="IsApproved" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3 pt-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsCorrectAnswer" class="form-check-input" type="checkbox" />
                            <label asp-for="IsCorrectAnswer" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
            </div>
            
            <hr class="my-4" />
            
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Update
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

