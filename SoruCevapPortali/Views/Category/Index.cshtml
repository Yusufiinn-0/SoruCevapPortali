@model List<SoruCevapPortali.Models.ViewModel.CategoryListViewModel>
@{
    ViewData["Title"] = "Kategoriler";
    var categories = ViewBag.Categories as List<SoruCevapPortali.Models.ViewModel.CategoryListViewModel> ?? new List<SoruCevapPortali.Models.ViewModel.CategoryListViewModel>();
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2"><i class="fas fa-th-list me-2"></i>Kategoriler</h1>
            <p class="text-muted">Tüm kategorileri keşfedin ve ilginizi çeken konulardaki soruları görüntüleyin</p>
        </div>
    </div>

    @if (categories.Any())
    {
        <div class="row g-4">
            @foreach (var category in categories)
            {
                var iconClass = !string.IsNullOrEmpty(category.Icon) ? category.Icon.Replace("fa-", "") : "globe";
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("Index", "Question", new { categoryId = category.CategoryId })" class="text-decoration-none">
                        <div class="card h-100 shadow-sm border-0" style="transition: all 0.3s ease; cursor: pointer;">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <div class="category-icon-large @iconClass" style="width: 80px; height: 80px; border-radius: 20px; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 32px;">
                                        <i class="fas @(category.Icon ?? "fa-globe")"></i>
                                    </div>
                                </div>
                                <h5 class="card-title mb-2">@category.CategoryName</h5>
                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <p class="card-text text-muted small mb-3">@category.Description</p>
                                }
                                <div class="d-flex justify-content-center align-items-center gap-3">
                                    <span class="badge bg-primary">
                                        <i class="fas fa-question-circle me-1"></i>@category.QuestionCount soru
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <div class="card bg-light border-0">
                    <div class="card-body text-center p-4">
                        <h5 class="mb-3">Toplam İstatistikler</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-2">
                                    <strong class="text-primary">@ViewBag.TotalCategory</strong>
                                    <p class="text-muted mb-0 small">Kategori</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-2">
                                    <strong class="text-success">@ViewBag.TotalQuestion</strong>
                                    <p class="text-muted mb-0 small">Toplam Soru</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-2">
                                    <a href="@Url.Action("Index", "Question")" class="btn btn-primary">
                                        <i class="fas fa-list me-2"></i>Tüm Soruları Gör
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>Henüz kategori bulunmamaktadır.
        </div>
    }
</div>

<style>
    .category-icon-large.tech,
    .category-icon-large.laptop { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }
    .category-icon-large.code { background: rgba(16, 185, 129, 0.1); color: #10b981; }
    .category-icon-large.edu,
    .category-icon-large.graduation-cap { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }
    .category-icon-large.health,
    .category-icon-large.heartbeat { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }
    .category-icon-large.general,
    .category-icon-large.globe { background: rgba(107, 114, 128, 0.1); color: #6b7280; }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(59, 130, 246, 0.15) !important;
    }
</style>


