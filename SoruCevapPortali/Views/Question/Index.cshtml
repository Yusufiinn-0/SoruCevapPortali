@model List<SoruCevapPortali.Models.ViewModel.QuestionViewModel>
@{
    ViewData["Title"] = "Sorular";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-filter"></i> Filtrele</h5>
                </div>
                <div class="card-body">
                    <form method="get" action="@Url.Action("Index")">
                        <div class="mb-3">
                            <label class="form-label">Kategori</label>
                            <select name="categoryId" class="form-select">
                                <option value="">Tümü</option>
                                @if (ViewBag.Categories != null)
                                {
                                    @foreach (var category in ViewBag.Categories as List<SoruCevapPortali.Models.Entity.Category> ?? new List<SoruCevapPortali.Models.Entity.Category>())
                                    {
                                        <option value="@category.CategoryId" selected="@(ViewBag.CategoryId != null && ViewBag.CategoryId == category.CategoryId)">
                                            @category.CategoryName
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ara</label>
                            <input type="text" name="search" class="form-control" value="@ViewBag.Search" placeholder="Soru ara...">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Filtrele</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary w-100 mt-2">Temizle</a>
                    </form>
                </div>
            </div>
            
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="@Url.Action("Create")" class="btn btn-success w-100 mb-3">
                    <i class="fas fa-plus"></i> Yeni Soru Sor
                </a>
            }
        </div>

        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-question-circle"></i> Sorular</h2>
                <span class="badge bg-primary">@Model.Count soru</span>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                @foreach (var question in Model)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div class="flex-grow-1">
                                    <h5 class="card-title">
                                        <a href="@Url.Action("Details", new { id = question.QuestionId })" class="text-decoration-none">
                                            @question.Title
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted">@question.Content</p>
                                    <div class="d-flex gap-3 text-muted small">
                                        <span><i class="fas fa-folder"></i> @question.CategoryName</span>
                                        <span><i class="fas fa-user"></i> @question.UserName</span>
                                        <span><i class="fas fa-calendar"></i> @question.CreatedDate.ToString("dd MMM yyyy")</span>
                                        <span><i class="fas fa-eye"></i> @question.ViewCount</span>
                                        <span><i class="fas fa-comments"></i> @question.AnswerCount cevap</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Henüz soru bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>


