@{
    ViewData["Title"] = "Erişim Engellendi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .error-card {
            background: white;
            border-radius: 24px;
            padding: 60px;
            text-align: center;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
            max-width: 500px;
        }
        .error-icon {
            width: 100px;
            height: 100px;
            background: rgba(220, 53, 69, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
        }
        .error-icon i {
            font-size: 48px;
            color: #dc3545;
        }
        h1 {
            color: #1a1a2e;
            font-weight: 700;
            margin-bottom: 15px;
        }
        p {
            color: #6c757d;
            margin-bottom: 30px;
        }
        .btn-back {
            background: linear-gradient(135deg, #e94560, #ff6b6b);
            color: white;
            border: none;
            padding: 14px 35px;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }
        .btn-back:hover {
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 10px 30px rgba(233, 69, 96, 0.3);
        }
    </style>
</head>
<body>
    <div class="error-card">
        <div class="error-icon">
            <i class="fas fa-ban"></i>
        </div>
        <h1>Erişim Engellendi</h1>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <p>Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
            <p class="text-muted small mb-4">
                Giriş yaptığınız hesap (@User.Identity?.Name) admin yetkisine sahip değildir.<br>
                Admin paneline erişmek için admin yetkisine sahip bir hesap ile giriş yapmanız gerekmektedir.
            </p>
            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-back" style="background: linear-gradient(135deg, #e94560, #ff6b6b); cursor:pointer;">
                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                    </button>
                </form>
                <a href="@Url.Action("Login", "Account")" class="btn-back" style="background: linear-gradient(135deg, #2563eb, #3b82f6);">
                    <i class="fas fa-sign-in-alt me-2"></i>Farklı Hesap ile Giriş
                </a>
                <a href="/" class="btn-back" style="background: linear-gradient(135deg, #6c757d, #868e96);">
                    <i class="fas fa-home me-2"></i>Ana Sayfa
                </a>
            </div>
        }
        else
        {
            <p>Bu sayfaya erişmek için önce giriş yapmanız gerekmektedir.</p>
            <p class="text-muted small mb-4">Admin paneline erişmek için admin yetkisine sahip bir hesap ile giriş yapın.</p>
            <div class="d-flex gap-3 justify-content-center">
                <a href="@Url.Action("Login", "Account")" class="btn-back" style="background: linear-gradient(135deg, #2563eb, #3b82f6);">
                    <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                </a>
                <a href="/" class="btn-back" style="background: linear-gradient(135deg, #6c757d, #868e96);">
                    <i class="fas fa-home me-2"></i>Ana Sayfa
                </a>
            </div>
        }
    </div>
</body>
</html>


